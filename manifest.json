{
  "name": "Zoom Text Only",
  "version": "1.0.1",
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "background": {
    "scripts": ["lib/util.js", "lib/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["lib/zoom.css"],
      "js": ["lib/util.js", "lib/zoom.js"]
    }
  ],
  "browser_action": {
    "name": "Zoom Text Only",
    "default_icon": "icon.png",
    "default_popup": "lib/popup.html"
  },
  "manifest_version": 2
}
